<% layout('layout') %>

<h2>All Products</h2>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Actions</th>
  </tr>
  <% products.forEach(p => { %>
    <tr>
      <td><%= p.id %></td>
      <td><%= p.name %></td>
      <td><%= p.quantity %></td>
      <td>$<%= p.price %></td>
      <td>
        <a href="/products/<%= p.id %>/edit">Edit</a>
        <form action="/products/<%= p.id %>/delete" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
